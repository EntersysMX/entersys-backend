# Dockerfile.dev - Development version with hot-reload

FROM python:3.11-slim

# Prevent Python from writing pyc files and buffering stdout/stderr
ENV PYTHONDONTWRITEBYTECODE 1
ENV PYTHONUNBUFFERED 1

# Add /app to PYTHONPATH
ENV PYTHONPATH /app

WORKDIR /app

# Install system dependencies for netcat (used in entrypoint)
RUN apt-get update && apt-get install -y netcat-openbsd && rm -rf /var/lib/apt/lists/*

# Copy and install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy the entire project (will be overridden by volume mount in dev)
COPY . .

# Make entrypoint scripts executable
RUN chmod +x ./entrypoint.dev.sh

# Expose port
EXPOSE 8000

# The entrypoint will be specified in docker-compose
ENTRYPOINT ["./entrypoint.dev.sh"]
